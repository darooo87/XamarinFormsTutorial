<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.LoginGridPage"
             BackgroundColor="#127ac7">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            
            <StackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">
                <Label Text="Welcome to Xamarin" TextColor="White" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Text="Cross-platform apps made easy" TextColor="White" Font="18" HorizontalOptions="Center"/>
            </StackLayout>
            <Button Grid.Column="0" Grid.Row="1" Text="Login" BackgroundColor="#1dabf0" TextColor="White"/>
            <Button Grid.Column="0" Grid.Row="2" Text="Register"  BackgroundColor="#1dabf0" TextColor="White"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>