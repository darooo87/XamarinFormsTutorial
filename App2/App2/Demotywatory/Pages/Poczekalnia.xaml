<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Demotywatory.Pages.Poczekalnia">
    <ListView x:Name="poczekalnialist">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Image Grid.Column="0" Grid.Row="0" Source="{Binding image_thumb_nl_url}" HeightRequest="200" />
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>