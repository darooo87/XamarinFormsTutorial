<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Data.ApplicationSettings">
    <TableView Intent="Form">
        <TableRoot>
            <TableSection>
                <EntryCell x:Name="title" Text="{Binding Title}" Label="Title" Placeholder="(eg Shopping)"  Completed="onChange"/>
                <SwitchCell x:Name="notificationsEnabled" Text="Notifications" On="{Binding Notifications}" OnChanged="onChange" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>